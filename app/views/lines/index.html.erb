<div class="container" id="lineindex">
	<h1 class="text-center">Select A Line</h1>
	<div class="row">
		<div class="col-md-7">
			<img src="../../assets/BART_cc_map_20141029.png" alt="BART map" id="BARTmap" class="img-responsive img-rounded">
		</div>
		<div class="col-md-5" id="linelinks">
			<ul class="list-unstyled">
			<% @allLines.each do |line| %>
				<li style="background-color: <%= line.color %>;"><h3><%= link_to line.name, line_path(line.slug) %></h3></li>
			<% end %>
			</ul>
		</div>
	</div>
</div>

<script type="text/javascript">
	activateNav("line")
</script>