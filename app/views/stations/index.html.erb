<div class="container" id="stationindex">
	<h1>smartbart.ly</h1>
	<div>
		
			<img src="../../assets/BART_cc_map_20141029.png" alt="BART map" id="BARTmap" class="col-md-9">
		
		<div class="col-md-3" id="stationlinks">
				<% @stations.each do |station| %>
				    <% tagged = false %>
				    <%if @current_user %>
						<% @favorite_stations.each do |fs|%>
							<% if station == fs %>
								<span data-_id="<%=station.id%>" class="hearted" onclick="clickHeart(this)">
									<span class="fa fa-heart" aria-hidden="true"></span>
								</span>
								<% tagged = true %>
							<% end %>
						<% end %>
					<% end %>
					<% if tagged == false %>
						<span data-_id="<%=station.id%>" onclick="clickHeart(this)">
								<span class="fa fa-heart" aria-hidden="true"></span>
						</span>
					<% end %>
					<%= link_to station.name, station_path(station.slug) %><br>
				<% end %>
		</div>
	</div>
</div>
